{
  "name": "crozz-coin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,move}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,move}\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run security:dependencies",
    "security:dependencies": "npm-check-updates --target minor",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm run test",
    "verify": "node scripts/verify-environment.js",
    "prepare": "husky install || true",
    "precommit": "npm run lint && npm run format:check && npm run security:check"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.3.3",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,move}": [
      "prettier --write"
    ]
  }
}
