{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "packagePath",
      "type": "promptString",
      "description": "Relative path to the Move package root (where Move.toml lives)",
      "default": "move/hello-world"
    },
    {
      "id": "gasBudget",
      "type": "promptString",
      "description": "Gas budget (in MIST) for publish/call commands",
      "default": "110000000"
    },
    {
      "id": "packageId",
      "type": "promptString",
      "description": "On-chain package ID for CLI calls",
      "default": "0xPACKAGE"
    },
    {
      "id": "moduleName",
      "type": "promptString",
      "description": "Move module name",
      "default": "greeting"
    },
    {
      "id": "functionName",
      "type": "promptString",
      "description": "Entry or public function to invoke",
      "default": "new"
    }
  ],
  "tasks": [
    {
      "label": "Sui: Move build",
      "type": "shell",
      "command": "sui",
      "args": [
        "move",
        "build",
        "--path",
        "${input:packagePath}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Sui: Move test",
      "type": "shell",
      "command": "sui",
      "args": [
        "move",
        "test",
        "--path",
        "${input:packagePath}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Sui: Publish package",
      "type": "shell",
      "command": "sui",
      "args": [
        "client",
        "publish",
        "--gas-budget",
        "${input:gasBudget}",
        "--path",
        "${input:packagePath}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Sui: Call Move function",
      "type": "shell",
      "command": "sui",
      "args": [
        "client",
        "call",
        "--package",
        "${input:packageId}",
        "--module",
        "${input:moduleName}",
        "--function",
        "${input:functionName}",
        "--gas-budget",
        "${input:gasBudget}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
