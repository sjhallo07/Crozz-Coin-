# Backend
SUI_NETWORK=testnet                                   # Network: testnet, mainnet, or localnet
SUI_RPC_URL=https://fullnode.testnet.sui.io
SUI_DEFAULT_GAS_BUDGET=10000000
SUI_ADMIN_PRIVATE_KEY=ed25519:BASE64_KEY
ADMIN_TOKEN=changeme
PORT=4000
CROZZ_EXECUTOR_DRY_RUN=true
CROZZ_PACKAGE_ID=0xYOUR_PACKAGE_ID
CROZZ_MODULE=crozz_token
CROZZ_TREASURY_CAP_ID=0xYOUR_TREASURY_CAP_OBJECT
CROZZ_ADMIN_CAP_ID=0xYOUR_ADMIN_CAP_OBJECT
CROZZ_REGISTRY_ID=0xYOUR_REGISTRY_SHARED_OBJECT
CROZZ_DEFAULT_SIGNER=0xFALLBACK_RECIPIENT
CROZZ_DATA_DIR=./backend/data
CROZZ_DB_PATH=
JWT_SECRET=super-secret-key
JWT_ISSUER=crozz-auth
JWT_ACCESS_TTL_MS=900000
JWT_REFRESH_TTL_MS=2592000000
PASSWORD_RESET_TTL_MS=900000
BCRYPT_SALT_ROUNDS=12

# IBM Cloud Object Storage
COS_BUCKET=crozz-dev
COS_ARCHIVE_PREFIX=crozz/jobs
COS_ENDPOINT=https://s3.us-south.cloud-object-storage.appdomain.cloud
COS_REGION=us-south
COS_ACCESS_KEY_ID=
COS_SECRET_ACCESS_KEY=
# Alternatively, use IAM credentials instead of HMAC keys
COS_API_KEY=
COS_RESOURCE_INSTANCE_ID=
COS_IAM_ENDPOINT=https://iam.cloud.ibm.com/identity/token

# IBM Secrets Manager (optional: enables *_REF variables below)
IBM_SM_API_KEY=
IBM_SM_URL=https://<instance-id>.<region>.secrets-manager.appdomain.cloud
# or use instance/region pair instead of URL
IBM_SM_INSTANCE_ID=
IBM_SM_REGION=

# Secret references (only resolved when IBM_SM_* values are configured)
SUI_ADMIN_PRIVATE_KEY_REF=sm://<secret-id>
ADMIN_TOKEN_REF=sm://<secret-id>
JWT_SECRET_REF=sm://<secret-id>
COS_ACCESS_KEY_ID_REF=sm://<secret-id>
COS_SECRET_ACCESS_KEY_REF=sm://<secret-id>

# Mainnet-specific backend settings (when SUI_NETWORK=mainnet)
# SUI_RPC_URL=https://fullnode.mainnet.sui.io
# CROZZ_PACKAGE_ID=0xYOUR_MAINNET_PACKAGE_ID
# CROZZ_TREASURY_CAP_ID=0xYOUR_MAINNET_TREASURY_CAP
# CROZZ_ADMIN_CAP_ID=0xYOUR_MAINNET_ADMIN_CAP
# CROZZ_REGISTRY_ID=0xYOUR_MAINNET_REGISTRY

# Frontend / Vite (prefix VITE_ )
VITE_SUI_NETWORK=testnet                              # Network: testnet, mainnet, or localnet
VITE_CROZZ_API_BASE_URL=http://localhost:4000
VITE_CROZZ_PACKAGE_ID=0xYOUR_PACKAGE_ID
VITE_CROZZ_MODULE=crozz_token
VITE_CROZZ_METADATA_ID=0xYOUR_METADATA_OBJECT_ID    # Required for metadata updates
VITE_CROZZ_VIEW_FUNCTION=crozz-logo.png
VITE_CROZZ_GAS_BUDGET=10000000
VITE_CROZZ_ADMIN_TOKEN=Marcos Mora
VITE_CROZZ_REGISTRY_ID=0xYOUR_REGISTRY_SHARED_OBJECT
VITE_CROZZ_TREASURY_CAP_ID=0xYOUR_TREASURY_CAP_OBJECT  # Required for mint/burn operations
VITE_CROZZ_ADMIN_CAP_ID=0xYOUR_ADMIN_CAP_OBJECT        # Required for freeze/metadata ops
VITE_SUI_CLOCK_OBJECT=0x6

# Mainnet-specific (optional - only needed when deploying to mainnet)
# VITE_CROZZ_MAINNET_PACKAGE_ID=0xYOUR_MAINNET_PACKAGE_ID
# VITE_CROZZ_MAINNET_METADATA_ID=0xYOUR_MAINNET_METADATA_ID

# Notes:
# - Copy this file to `.env` (backend) and `frontend/.env` (frontend) as appropriate and replace placeholders.
# - For local development run the backend (`node ./backend/src/server.js` or `npm run dev` in the backend folder) and the frontend (`npm run dev` in the frontend folder).
